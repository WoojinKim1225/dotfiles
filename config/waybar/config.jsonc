// -*- mode: jsonc -*-
{
    "layer": "top",

    "position": "top",
    "height": 24, // Waybar height (to be removed for auto height)
    "spacing": 0, // Gaps between modules (4px)
    "margin": 0,

    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window",
        
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "custom/wallpaper",
        "mpris",
        "custom/fcitx",
        "cpu",
        "memory",
        "disk",
        "temperature",
        "battery",
        "network",
        "bluetooth",
        "pulseaudio",

    ],
    // Modules configuration
    "hyprland/workspaces": {
         "disable-scroll": true,
         "all-outputs": true,
         "warp-on-scroll": false,
         "persistent-workspaces": {
           "*": 10
         },
         "format": " {name} ",
    },
    "hyprland/window": {
      "format": " {} ",
      "rewrite":{
        "(.*) - fish": "> [$1]"
      },
      "seperate-outputs": true
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "custom/fcitx": {
        "exec-on-event" : true,
        "format": "‚îÇ{}‚îÇ",
        "exec" : "~/.config/waybar/fcitx.sh",
        "on-click": "fcitx5-remote -t",
        "restart-interval": 1,
    },
    "mpd": {
        "format": "{title} - {artist}",
        "format-disconnected": "Disconnected ÔÄÅ",
        "format-stopped": "{repeatIcon}{randomIcon}{singleIcon}{consumeIcon}Stopped ÔÄÅ",
        "unknown-tag": "N/A",
        "interval": 5,
        "consume-icons": {
            "on": "c"
        },
        "random-icons": {
            "on": "z"
        },
        "repeat-icons": {
            "on": "r"
        },
        "single-icons": {
            "on": "s"
        },
        "state-icons": {
            "paused": "ÔÅå",
            "playing": "ÔÅã"
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)",
        "on-click": "mpc toggle"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "clock": {
        "interval": 1,
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{:%a %d %b   %H:%M}"
    },
    "cpu": {
        "format": "Ôãõ {usage}%‚îÇ",
        "tooltip": true,
        "tooltip-format": "{usage}%"
    },
    "memory": {
        "format": "ÓøÖ {percentage}%‚îÇ",
        "tootip": true,
        "tooltip-format": "{used:0.1f}G / {total:0.1f}G "
    },
    "disk": {
        "interval": 30,
        "format": "ÔÇ† {percentage_used}%‚îÇ",
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{icon} {temperatureC}¬∞C ",
        "format-icons": ["Ôãã", "Ôãä", "Ôãâ", "Ôãà", "Ôãá"]
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè","Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-full": "{icon} {capacity}%",
        "format-charging": "ÔÉß {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{icon} {time}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "battery#bat2": {
        "bat": "BAT2"
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "ÔÉß",
        "performance": "ÔÉß",
        "balanced": "Ôâé",
        "power-saver": "ÔÅ¨"
      }
    },
    "network": {
        "format-wifi": " Û∞§®",
        "format-ethernet": " ÓΩÑ",
        "tooltip-format": "{ifname} via {gwaddr} ({bandwidthUpBits} | {bandwidthDownBits})",
        "format-linked": "{ifname} (No IP) ",
        "format-disconnected": "Ó´ê",
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{icon}",
        "format-bluetooth": "{icon}",
        "format-bluetooth-muted": "{icon}",
        "format-muted": "{format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            // "headphone": "ÔÄ•",
            // "hands-free": "Û±°è",
            // "headset": "Û±°è",
            // "phone": "ÔÇï",
            // "portable": "ÔÇï",
            // "car": "ÔÜπ",
            "default": [" ÔÄ¶ ", " ÔÄß ", " ÔÄ® "]
        },
        "on-click": "pavucontrol",
        "tooltip-format": "{desc} {format_source}"
    },
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/power": {
        "format": " ÔÄë  ",
        "on-click": "wlogout"
    },

    "bluetooth": {
        "format": "{icon}",
        "format-icons": {
            "enabled": " Ôäî",
            "disabled": "   "
        },
        "on-click": "$HOME/.config/waybar/wofi-bluetooth.sh"
    },

  "mpris": {
    "format": "DEFAULT: {player_icon} {dynamic}",
    "format-paused": "DEFAULT: {status_icon} <i>{dynamic}</i>",
    "player-icons": {
      "default": "‚ñ∂",
      "mpv": "üéµ"
    },
    "status-icons": {
      "paused": "‚è∏"
    },
    // "ignored-players": ["firefox"]
  },

  "custom/wallpaper": {
    "format": "a",
    "on-click": "python $HOME/.config/waybar/ChangeWallpaper.py",
  }
  
   
}
